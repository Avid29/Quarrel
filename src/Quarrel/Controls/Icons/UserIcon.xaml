<UserControl
    x:Class="Quarrel.Controls.Icons.UserIcon"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Quarrel.Controls.Icons"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:tc="using:Microsoft.Toolkit.Uwp.UI.Controls"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Border MaxWidth="48" MaxHeight="48" CornerRadius="24">
        <tc:ImageEx Source="{x:Bind ViewModel.AvatarUri}"/>
    </Border>

</UserControl>
