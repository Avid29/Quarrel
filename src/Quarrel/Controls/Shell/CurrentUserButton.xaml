<UserControl
    x:Class="Quarrel.Controls.Shell.CurrentUserButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Quarrel.Controls.Shell"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:baseconvert="using:Quarrel.Converters.Base"
    xmlns:discordconvert="using:Quarrel.Converters.Discord"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="64"
    d:DesignWidth="224">

    <UserControl.Resources>
        <baseconvert:UriToImageSourceConverter x:Key="UriToImageSourceConverter"/>
        <discordconvert:PresenseToColorConverter x:Key="PresenseToColorConverter"/>
    </UserControl.Resources>
    
    <Button HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
            HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"
            Style="{StaticResource DiscordOpaqueButton}" Background="{StaticResource AcrylicUserBackground}"
            BorderThickness="0" Padding="0" Height="64">
        <Button.Flyout>
            <Flyout FlyoutPresenterStyle="{StaticResource FlyoutPresenterStyle2}">
                <StackPanel Padding="12">
                    <!--<ListView x:Name="AccountView" Visibility="Collapsed" ItemContainerStyle="{StaticResource ChannelListItemStyle}" Margin="-20,6,-40,8" SelectionMode="None" IsItemClickEnabled="True">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="48"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock FontSize="13.333" FontWeight="SemiLight" Text="{x:Bind UserName}" VerticalAlignment="Center"/>
                                    <AppBarButton Height="36" Style="{StaticResource BetterAppBarButton}" Width="36" Grid.Column="1" Margin="0,0,0,0">
                                        <AppBarButton.Icon>
                                            <FontIcon Glyph="" FontSize="14" Margin="0,0,0,0"/>
                                        </AppBarButton.Icon>
                                    </AppBarButton>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>-->
                    <!--<Grid Visibility="Collapsed" Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Button Style="{StaticResource DiscordButton}" Content="Add account" Margin="0,0,4,0"  Padding="12,6" HorizontalAlignment="Stretch" Background="{ThemeResource SystemControlBackgroundAccentBrush}"/>
                        <Button Style="{StaticResource DiscordButton}" Grid.Column="1" Content="Log out" Margin="4,0,0,0" Padding="12,6" HorizontalAlignment="Stretch" Background="{ThemeResource dnd}"/>
                    </Grid>-->
                    
                    <RadioButton x:Uid="/Main/OnlineRadio" IsChecked="{x:Bind ViewModel.Presence.IsOnline}" Foreground="#43b581" GroupName="status" Tag="online" Content="Online" Style="{StaticResource DiscordRadioButton}" Click="StatusSelected"/>
                    <RadioButton x:Uid="/Main/IdleRadio" IsChecked="{x:Bind ViewModel.Presence.IsIdle}" Foreground="#faa61a" GroupName="status" Tag="idle" Content="Idle" Style="{StaticResource DiscordRadioButton}" Click="StatusSelected"/>
                    <RadioButton x:Uid="/Main/DNDRadio" IsChecked="{x:Bind ViewModel.Presence.IsDnd}" Foreground="#f04747" GroupName="status" Tag="dnd" Content="Do not disturb" Style="{StaticResource DiscordRadioButton}" Click="StatusSelected"/>
                    <RadioButton x:Uid="/Main/InvisibleRadio" IsChecked="{x:Bind ViewModel.Presence.IsOffline}" Foreground="#747f8d" GroupName="status" Tag="invisible" Content="Invisible" Style="{StaticResource DiscordRadioButton}" Click="StatusSelected"/>
                </StackPanel>
            </Flyout>
        </Button.Flyout>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            
            <controls:DropShadowPanel Color="{x:Bind ViewModel.Presence.Status, Converter={StaticResource PresenseToColorConverter}, Mode=OneWay}"
                                      HorizontalAlignment="Center" VerticalAlignment="Center" BlurRadius="24" Height="48" Width="48"
                                      Margin="12,6">
                <Rectangle Height="40" Width="40"
                           RadiusX="20" RadiusY="20" HorizontalAlignment="Center">
                    <Rectangle.Fill>
                        <ImageBrush ImageSource="{x:Bind ViewModel.Model.User.AvatarUriProperty, Converter={StaticResource UriToImageSourceConverter}, Mode=OneWay}"/>
                    </Rectangle.Fill>
                </Rectangle>
            </controls:DropShadowPanel>

            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <TextBlock Text="{x:Bind ViewModel.Model.User.Username, Mode=OneWay}"
                           FontWeight="SemiBold" FontSize="14"/>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="#" Opacity=".6" FontSize="12"/>
                    <TextBlock Text="{x:Bind ViewModel.Model.User.Discriminator}" Opacity="0.6" FontSize="12"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Button>
</UserControl>
