<UserControl
    x:Class="Quarrel.Controls.Shell.CurrentUserButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:baseconvert="using:Quarrel.Converters.Base"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:discordconvert="using:Quarrel.Converters.Discord"
    xmlns:local="using:Quarrel.Controls.Shell"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="64"
    d:DesignWidth="224"
    mc:Ignorable="d">

    <UserControl.Resources>
        <discordconvert:PresenseToColorConverter x:Key="PresenseToColorConverter" />
    </UserControl.Resources>
    <Grid>
        <Rectangle
            Height="12"
            Margin="0,-12,0,0"
            VerticalAlignment="Top"
            IsHitTestVisible="False"
            Opacity="{StaticResource ShadowOpacity}">
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                    <GradientStop Offset="1" />
                    <GradientStop Offset="0" Color="{ThemeResource ShadowColor}" />
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Button
            Height="64"
            Padding="0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            HorizontalContentAlignment="Stretch"
            VerticalContentAlignment="Stretch"
            Background="{StaticResource AcrylicUserBackground}"
            BorderThickness="0"
            Style="{StaticResource DiscordOpaqueButton}">
            <Button.Flyout>
                <Flyout FlyoutPresenterStyle="{StaticResource FlyoutPresenterStyle2}">
                    <StackPanel Orientation="Horizontal" Padding="12">
                        <RadioButton
                            Click="StatusSelected"
                            Foreground="#43b581"
                            GroupName="status"
                            IsChecked="{x:Bind ViewModel.CurrentUserService.CurrentUser.Presence.IsOnline, Mode=OneWay}"
                            Style="{StaticResource DiscordRadioButton}"
                            Tag="online" />
                        <RadioButton
                            Click="StatusSelected"
                            Foreground="#faa61a"
                            GroupName="status"
                            IsChecked="{x:Bind ViewModel.CurrentUserService.CurrentUser.Presence.IsIdle, Mode=OneWay}"
                            Style="{StaticResource DiscordRadioButton}"
                            Tag="idle" />
                        <RadioButton
                            Click="StatusSelected"
                            Foreground="#f04747"
                            GroupName="status"
                            IsChecked="{x:Bind ViewModel.CurrentUserService.CurrentUser.Presence.IsDnd, Mode=OneWay}"
                            Style="{StaticResource DiscordRadioButton}"
                            Tag="dnd" />
                        <RadioButton
                            Click="StatusSelected"
                            Foreground="#747f8d"
                            GroupName="status"
                            IsChecked="{x:Bind ViewModel.CurrentUserService.CurrentUser.Presence.IsOffline, Mode=OneWay}"
                            Style="{StaticResource DiscordRadioButton}"
                            Tag="invisible" />
                    </StackPanel>
                </Flyout>
            </Button.Flyout>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <controls:DropShadowPanel
                    Width="48"
                    Height="48"
                    Margin="12,6"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    BlurRadius="24"
                    Color="{x:Bind ViewModel.CurrentUserService.CurrentUser.Presence.Status, Converter={StaticResource PresenseToColorConverter}, Mode=OneWay}">
                    <Rectangle
                        Width="40"
                        Height="40"
                        HorizontalAlignment="Center"
                        RadiusX="20"
                        RadiusY="20">
                        <Rectangle.Fill>
                            <ImageBrush ImageSource="{x:Bind ViewModel.CurrentUserService.CurrentUser.Model.AvatarUrl, Mode=OneWay}" />
                        </Rectangle.Fill>
                    </Rectangle>
                </controls:DropShadowPanel>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock
                        FontSize="14"
                        FontWeight="SemiBold"
                        Text="{x:Bind ViewModel.CurrentUserService.CurrentUser.Model.Username, Mode=OneWay}" />
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            FontSize="12"
                            Opacity=".6"
                            Text="#" />
                        <TextBlock
                            FontSize="12"
                            Opacity="0.6"
                            Text="{x:Bind ViewModel.CurrentUserService.CurrentUser.Model.Discriminator, Mode=OneWay}" />
                    </StackPanel>
                </StackPanel>

                <Button
                    Grid.Column="2"
                    Margin="0,0,16,0"
                    Padding="0"
                    FontFamily="Segoe MDL2 Assets"
                    Foreground="{ThemeResource Foreground}"
                    Style="{ThemeResource TextBlockButtonStyle}"
                    Command="{x:Bind ViewModel.OpenSettings, Mode=OneWay}">
                    <FontIcon Glyph="" FontSize="16"/>
                </Button>
            </Grid>
        </Button>
    </Grid>

</UserControl>
