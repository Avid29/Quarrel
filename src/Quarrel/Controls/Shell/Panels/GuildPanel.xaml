<UserControl
    x:Class="Quarrel.Controls.Shell.Panels.GuildPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Quarrel.Controls.Shell.Panels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <ListView x:Name="GuildList"
              SelectedItem="{x:Bind ViewModel.SelectedGuild, Mode=TwoWay}"
              ItemsSource="{x:Bind ViewModel.Source}"
              ItemTemplate="{StaticResource GuildTemplate}"
              ItemContainerStyle="{StaticResource GuildListItemStyle}"
              SelectionMode="Single"
              IsItemClickEnabled="True"
              ScrollViewer.VerticalScrollBarVisibility="Hidden"
              ItemClick="GuildList_ItemClick"/>
</UserControl>
