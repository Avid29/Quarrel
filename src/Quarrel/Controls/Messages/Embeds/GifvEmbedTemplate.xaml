<UserControl
    x:Class="Quarrel.Controls.Messages.Embeds.GifvEmbedTemplate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Quarrel.Controls.Messages.Embeds"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <MediaElement Source="{x:Bind ViewModel.Video.Url, Mode=OneWay}" IsLooping="True"
                      Height="{x:Bind ViewModel.Video.ActualHeight, Mode=OneWay}" Width="{x:Bind ViewModel.Video.ActualWidth, Mode=OneWay}"/>
    </Grid>
</UserControl>
