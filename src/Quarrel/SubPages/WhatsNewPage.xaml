                    <Paragraph>
                        <Run Text="• Audio Visualizer"/>
                    </Paragraph>
                    <Paragraph FontSize="8"/>
                    <Paragraph>
                        <Run Text="• Slightly improved post suspended behavior"/>
                    </Paragraph>
                    <Paragraph FontSize="8"/>
                    <Paragraph>
                        <Run Text="• Fixed Edit Last Message"/>
                    </Paragraph>
                    <Paragraph FontSize="8"/>
                    <Paragraph>
                        <Run Text="• New Quarrel Rich Presence App Service"/>
                    </Paragraph>
                    <Paragraph FontSize="8"/>
                    <Paragraph>
                        <Run Text="• Fixed DM Flyouts"/>
                    </Paragraph>
                    <Paragraph FontSize="8"/>
                    <Paragraph>
                        <Run Text="• Improved Xbox UI/UX"/>
                    </Paragraph>
                    <Paragraph FontSize="8"/>
                </RichTextBlock>
            </ScrollViewer>
        </StackPanel>
