<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="SettingsHeaderTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="TextWrapping" Value="WrapWholeWords"/>
        <Setter Property="Foreground" Value="{ThemeResource SystemControlBackgroundAccentBrush}"/>
    </Style>

    <Style x:Key="SettingsSubHeaderTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="TextWrapping" Value="WrapWholeWords"/>
        <Setter Property="Foreground" Value="{ThemeResource SystemControlBackgroundAccentBrush}"/>
        <Setter Property="Opacity" Value="0.75"/>
    </Style>

    <Style x:Key="SettingsDescriptionStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Foreground" Value="{ThemeResource ApplicationForegroundThemeBrush}"/>
        <Setter Property="TextWrapping" Value="WrapWholeWords"/>
        <Setter Property="Opacity" Value="0.5"/>
    </Style>

</ResourceDictionary>
