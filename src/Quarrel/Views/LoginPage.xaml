<UserControl
    x:Class="Quarrel.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Quarrel.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Quarrel.Controls"
    mc:Ignorable="d"
    d:DesignHeight="600"
    d:DesignWidth="800">

    <Grid Background="{ThemeResource PrimaryBackgroundHostBackdrop}">
        <StackPanel VerticalAlignment="Center" MaxWidth="360">
            <Grid Padding="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                
                <controls:QuarrelIcon Foreground="{ThemeResource SystemControlBackgroundAccentBrush}"
                                      Height="64" Width="64" HorizontalAlignment="Left"/>

                <TextBlock Text="Quarrel" Foreground="{ThemeResource SystemControlBackgroundAccentBrush}" Grid.Column="1"
                           FontSize="46" CharacterSpacing="250" HorizontalAlignment="Right"/>
            </Grid>
            <Button Content="Login" HorizontalAlignment="Stretch" Foreground="{ThemeResource SystemChromeLowColor}"
                    Style="{StaticResource DiscordButton}"/>
        </StackPanel>
    </Grid>
</UserControl>
