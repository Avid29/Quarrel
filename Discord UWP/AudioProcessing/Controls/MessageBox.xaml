                    <MenuFlyoutItem Text="Search giphy" Click="AddGiphy_Click">
                        <MenuFlyoutItem.Icon>
                            <SymbolIcon Symbol="BrowsePhotos"/>
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>
